generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PROVIDER {
  LOCAL
  GOOGLE
  FACEBOOK
  TWITTER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password String?
  googleId String? @unique
  refreshToken String? @unique
  provider  PROVIDER @default(LOCAL)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}